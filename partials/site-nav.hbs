<nav class="site-nav">
    <div class="site-nav-top">
        <div class="site-nav-top-left">
            <a class="site-nav-logo" href="{{@blog.url}}">
                <img id="big-title-img" src="/assets/images/title.png" alt="{{@blog.title}}" />
                <img id="little-title-img" src="/assets/images/dsalogo.png" alt="{{@blog.title}}" />
            </a>
        </div>
        <div class="site-nav-top-right">
            <div class="social-links">
                {{#if @blog.facebook}}
                    <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank">{{> "icons/facebook"}}</a>
                {{/if}}
                {{#if @blog.twitter}}
                    <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank">{{> "icons/twitter"}}</a>
                {{/if}}
                <a class="social-link" href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/" target="_blank">{{> "icons/rss"}}</a>
            </div>
        </div>
    </div>
    {{#if @blog.navigation}}
        {{navigation}}
    {{/if}}
</nav>
